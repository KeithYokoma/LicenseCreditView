<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        style="@style/Label.LibraryName"
        android:id="@+id/label_library_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <TextView
        style="@style/Label.LicenseHeader"
        android:id="@+id/label_license_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/label_library_name"/>
    <TextView
        style="@style/Label.LicenseBody"
        android:id="@+id/label_license_body"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/label_license_header"/>
</RelativeLayout>